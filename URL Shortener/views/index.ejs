<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Document</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <header></header>
    <main class="d-flex flex-column">
      <!-- Form Container -->
      <div class="container mt-3 border border-dark rounded">
        <div class="align-items-center justify-content-center">
          <h1 class="text-center">URL Shrinker</h1>
          <div class="mb-3">
            <form action="/shortUrls" method="post" class="mx-4">
              <label for="urlInput" class="form-label">URL</label>
              <input
                type="url"
                class="form-control"
                name="urlInput"
                placeholder="URL"
              />
              <div
                class="mb-3 d-flex align-items-center justify-content-center mt-3"
              >
                <div class="d-grid gap-2">
                  <button type="submit" name="" id="" class="btn btn-primary">
                    Shrink
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- Table Container -->
      <div class="container mt-5">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Full URl</th>
                <th scope="col">Short URL</th>
                <th scope="col">Clicks</th>
              </tr>
            </thead>
            <tbody>
              <% shortUrls.forEach(shortUrl => { %>
              <tr>
                <td scope="row">
                  <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                </td>
                <td>
                  <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                </td>
                <td><%= shortUrl.clicks %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <footer></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
